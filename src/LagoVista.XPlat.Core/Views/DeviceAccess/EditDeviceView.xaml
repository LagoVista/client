<?xml version="1.0" encoding="utf-8" ?>
<pge:LagoVistaContentPage     
            xmlns:pge="clr-namespace:LagoVista.XPlat.Core;assembly=LagoVista.XPlat.Core"
            xmlns:trs="clr-namespace:LagoVista.XPlat.Core.Extensions;assembly=LagoVista.XPlat.Core"
            xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="LagoVista.XPlat.Core.Views.DeviceAccess.EditDeviceView"
            Title="{trs:ClientTranslate EditDevice_Title}"
            RightMenu="Save" 
            LeftMenu="Cancel"
            HasToolBar="true" >
    <pge:LagoVistaContentPage.MainContent>
        <StackLayout>
            <pge:FormViewer Form="{Binding FormAdapter}" />
            <pge:FormViewer Form="{Binding CustomFieldAdapter, Mode=TwoWay}" />
        </StackLayout>
    </pge:LagoVistaContentPage.MainContent>
</pge:LagoVistaContentPage>